
@model VideoStore.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
    <ul>
        <li>Genre: @Model.Genres.Name</li>
        <li>Released Date: @Model.ReleasedDate.ToLongDateString()</li>
        <li>Date Added: @Model.DateAdded.ToLongDateString()</li>
        <li>Number in Stocks: @Model.NumberInStock</li>
    </ul>

